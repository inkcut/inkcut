            padding = 0
            Label:
                text = "Graphic Spacing"
            Form:
                padding = 0
                Label:
                    text = "Row"
                DoubleSpinBox:
                    value << to_unit(job.copy_spacing[0], plugin.units)
                    value :: job.copy_spacing[0] = from_unit(change['value'],plugin.units)
                    suffix << " "+plugin.units
                    maximum = 99999.9
                    single_step = 0.1
                Label:
                    text = "Col"
                DoubleSpinBox:
                    value << to_unit(job.copy_spacing[1], plugin.units)
                    value :: job.copy_spacing[1] = from_unit(change['value'],plugin.units)
                    suffix << " "+plugin.units
                    maximum = 99999.9
                    single_step = 0.1

