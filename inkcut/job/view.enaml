                    value << to_unit(job.copy_weedline_padding[1], plugin.units)
                    value :: job.copy_weedline_padding[1] = from_unit(change['value'],plugin.units)
                    suffix << " "+plugin.units
                    maximum = 99999.9
                    single_step = 0.1
                ImageView:
                    image = load_image('text_padding_right')
                DoubleSpinBox:
                    value << to_unit(job.copy_weedline_padding[2], plugin.units)
                    value :: job.copy_weedline_padding[2] = from_unit(change['value'],plugin.units)
                    suffix << " "+plugin.units
